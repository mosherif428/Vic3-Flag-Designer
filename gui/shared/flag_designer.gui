	type vbox_flag_designer_emblem_list = vbox
	{
		layoutpolicy_horizontal = expanding
		layoutpolicy_vertical = expanding
		background = Background_Area
		datamodel = "[GetGlobalList('all_emblems')]"
		hbox = {
			layoutpolicy_horizontal = expanding
			layoutpolicy_vertical = expanding
			tab_button = {
				text = "Colored Emblems"
				onclick = "[GetVariableSystem.Set('flag_designer_window', 'colored_emblem_list')]"
				down = "[GetVariableSystem.HasValue('flag_designer_window', 'colored_emblem_list')]"

				layoutpolicy_horizontal = expanding
			}

			tab_button = {
				text = "Textured Emblems"
				onclick = "[GetVariableSystem.Set('flag_designer_window', 'textured_emblem_list')]"
				down = "[GetVariableSystem.HasValue('flag_designer_window', 'textured_emblem_list')]"


				layoutpolicy_horizontal = expanding
			}
			scrollbox = {
				layoutpolicy_horizontal = expanding
				layoutpolicy_vertical = expanding
				blockoverride "scrollbox_content"
				{
					colored_emblem_list = {
						visible = "[GetVariableSystem.HasValue('flag_designer_window', 'colored_emblem_list')"
					}
				}
				blockoverride "scrollbox_content"
				{
					textured_emblem_list = {
						visible = "[GetVariableSystem.HasValue('flag_designer_window', 'textured_emblem_list')]"
					}
				}
			}
		}
	}

	type vbox_flag_designer_preview = vbox
	{
		name = "flag_designer_previews"
		layoutpolicy_horizontal = expanding
		layoutpolicy_vertical = expanding

		
		hbox = {
			layoutpolicy_horizontal = expanding
			layoutpolicy_vertical = expanding
			parentanchor = right
			flowcontainer = {
				layoutpolicy_horizontal = expanding
				maximumsize = { 500 600 }
				parentanchor = vcenter|left
				icon = {
					size = { 340 542 }
					position = { 3 0 }
					texture = "gfx/interface/flag/fancy_flag_country_view.dds"
				}
				flag_3d_animated = {
					datacontext = "[GetScriptedGui('changing_coa_effect')]"
					texture = "[GetScriptedGui('changing_coa_effect')]"
					size = { 550 309 }
					position = { 0 0 }
				}
			}
			flowcontainer = {
				parentanchor = top
				margin_top = -200
				direction = vertical
				layoutpolicy_horizontal = shrinking
				spacing = 50
				tiny_flag = {
					datacontext = "[GetScriptedGui('initial_coa_effect')]"
					texture = "[GetScriptedGui('initial_coa_effect')]"
				}
				small_flag = {
					datacontext = "[GetScriptedGui('changing_coa_effect')]"
					texture = "[GetScriptedGui('changing_coa_effect')]"
				}
				flag = {
					datacontext = "[GetScriptedGui('initial_coa_effect')]"
					texture = "[GetScriptedGui('initial_coa_effect')]"
				}
				large_flag = {
					datacontext = "[GetScriptedGui('changing_coa_effect')]"
					texture = "[GetScriptedGui('changing_coa_effect')]"
				}
			}
		}

		spacer = { size = { 0 10 } }

		
		expand = {}
	}

	type vbox_flag_designer_tabs = vbox
	{
		name = "flag_designer_tabs"
		layoutpolicy_horizontal = expanding
		layoutpolicy_vertical = expanding
		background = paper_bg
		max_width = 600
		parentanchor = top|hcenter
		hbox = {
			layoutpolicy_horizontal = growing
			margin_top = 10
			margin_right = 10
			margin_left = 10
			parentanchor = top|hcenter
			tab_button = {
				text = "Background"
				datacontext = "[GetGlobalList('all_patterns')]"

				onclick = "[GetVariableSystem.Set('flag_designer_window', 'background_panel')]"

				down = "[GetVariableSystem.HasValue('flag_designer_window', 'background_panel')]"
				layoutpolicy_horizontal = expanding
			}

			tab_button = {
				text = "Emblem Layout"
				datacontext = "[GetGlobalList('emblem_layouts')]"
				onclick = "[GetVariableSystem.Set('flag_designer_window', 'emblem_layout')]"
				down = "[GetVariableSystem.HasValue('flag_designer_window', 'emblem_layout')]"

				layoutpolicy_horizontal = expanding
			}

			tab_button = {
				text = "Emblem Instances"
				datacontext = "[GetGlobalList('all_emblems')]"
				onclick = "[GetVariableSystem.Set('flag_designer_window', 'emblem_instances')]"

				down = "[GetVariableSystem.HasValue('flag_designer_window', 'emblem_instances')]"

				layoutpolicy_horizontal = expanding
			}
		}
		widget = {
			layoutpolicy_horizontal = expanding
			layoutpolicy_vertical = expanding
			background = Background_Area
			vbox_flag_designer_background_panel = {}
			vbox_flag_designer_emblemlayout_panel = {}
			vbox_flag_designer_embleminstances_panel = {}
		}
	}

